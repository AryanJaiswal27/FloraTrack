    <Button
        android:id="@+id/scanBtn"
        android:layout_width="195dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/dark_green"
        android:textColor="@color/white"
        android:drawableStart="@drawable/baseline_qr_code_scanner_24"
        android:drawablePadding="0dp"
        android:padding="20dp"
        android:textSize="30dp"
        android:text="Scan"
        android:visibility="visible"

        />




    <LinearLayout
        android:id="@+id/btnArr"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/waterBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Water"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="#0040FF"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/baseline_water_drop_50"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                ></Button>
            <Button
                android:id="@+id/fertilizerBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fertilizer"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#770000"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/baseline_filter_hdr_50"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                ></Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/searchBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Google"
                android:background="@color/dark_green"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:drawableLeft="@drawable/baseline_search_50"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                ></Button>
            <Button
                android:id="@+id/wikiBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_green"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Wikipedia"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/baseline_blur_circular_50"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                ></Button>


        </LinearLayout>
    </LinearLayout>








</LinearLayout>
